#include <iostream>

using namespace std;

int main(int argc, char** argv) {
	
	int opcion = 0;
	cout<<"ingrese una opcion";
	cin>>opcion;
	
	switch (opcion)
	{
		case 1:
			{
				cout<<"escogiste 1"<<endl;
				cout<<"segundo linea opcion 1"<<endl;
				break;
			}
			case 2:
			{
				cout<<"escogiste 2"<<endl;
				break;
			}
			
			default:
				cout<<"ingrese una opcion entre 1 y 3"<<endl;
				break;
			}
			
			
	return 0;
}
