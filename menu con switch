#include <iostream>

using namespace std;

int main(int argc, char** argv) {
	
	int opcion =0;
	while (true){
		system("cls");
		cout<<"****"<<endl;
		cout<<"menu"<<endl;
		cout<<"****"<<endl;
		
		cout<<endl;
		cout<<"1- cafe y granitas"<<endl;
		cout<<"2- respoteria"<<endl;
		cout<<"0- salir"<<endl;
		cout<<"ingrese una opcion del menu:";
		cin>>opcion;
		if(opcion==0){
			break;
		}
		switch(opcion)
		{
			case 1:
		{
		system("cls");
		cout<<"estas en el menu de cafe y granitas"<<endl;
		system("pause");
		break;
	}
	case 2:
		{
			system("cls");
			cout<<"estas en el menu de respoteria"<<endl;
			system("pause");
			break;
		}
	}
}

		return 0;

}
